<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>PizzaShop</servlet-name>
		<servlet-class>pizzashop.PizzaShopgaeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PizzaShop</servlet-name>
		<url-pattern>/pizzashop</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>add_account</servlet-name>
	    <servlet-class>pizzashop.NewAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_account</servlet-name>
        <url-pattern>/add_account</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>edit_account</servlet-name>
        <servlet-class>pizzashop.EditAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit_account</servlet-name>
        <url-pattern>/edit_account</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>del_account</servlet-name>
        <servlet-class>pizzashop.DelAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>del_account</servlet-name>
        <url-pattern>/del_account</url-pattern>
    </servlet-mapping>
    
	<welcome-file-list>
		<welcome-file>index_account.html</welcome-file>
	</welcome-file-list>
</web-app>
